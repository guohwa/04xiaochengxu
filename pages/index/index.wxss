.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-image: url('/static/images/chinese_ink_bg.svg');
  background-size: cover;
  background-position: center bottom;
  background-repeat: no-repeat;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
  padding: 40rpx 0;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.content-box {
  width: 90%;
  margin-bottom: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.description {
  background-color: rgba(255, 255, 255, 0.7);
  padding: 40rpx;
  border-radius: 10rpx;
  width: 100%;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.description text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.8;
}

.primary-btn {
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding: 24rpx 0;
  width: 70%;
  box-shadow: 0 6rpx 10rpx rgba(7, 193, 96, 0.2);
  margin-top: 40rpx;
  letter-spacing: 4rpx;
}
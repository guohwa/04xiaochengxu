.container {
  padding: 30rpx;
  min-height: 100vh;
  background-image: url("data:image/svg+xml;base64,");
  background-size: cover;
  background-position: center bottom;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
  padding: 40rpx 0;
  width: 100%;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.result-content {
  width: 90%;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.result-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx;
}

.result-label {
  font-size: 32rpx;
  color: #555;
  margin-bottom: 20rpx;
}

.result-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  padding: 20rpx;
  border-bottom: 2rpx solid rgba(0, 0, 0, 0.1);
}

.button-group {
  display: flex;
  justify-content: space-between;
  width: 90%;
  margin-top: 40rpx;
}

.btn {
  width: 45%;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  padding: 20rpx 0;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  letter-spacing: 4rpx;
}

.btn-back {
  background-color: #f5f5f5;
  color: #333;
  border: 1rpx solid #ddd;
}

.btn-home {
  background-color: #07c160;
  color: white;
}
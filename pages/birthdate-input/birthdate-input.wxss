.container {
  padding: 30rpx;
  min-height: 100vh;
  background-image: url("data:image/svg+xml;base64,");
  background-size: cover;
  background-position: center bottom;
  background-repeat: no-repeat;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header {
  margin-bottom: 50rpx;
  text-align: center;
  padding: 40rpx 0;
  width: 100%;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  letter-spacing: 4rpx;
}

.subtitle {
  font-size: 36rpx;
  color: #555;
  line-height: 1.5;
  margin-bottom: 30rpx;
}

.form-content {
  width: 90%;
  margin-bottom: 40rpx;
  background-color: rgba(255, 255, 255, 0.7);
  padding: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
}

.form-item {
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  font-size: 32rpx;
  padding: 20rpx;
  border-radius: 10rpx;
}

.form-item text {
  width: 220rpx;
  color: #333;
  margin-right: 40rpx;
  font-weight: 500;
}

.picker {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  min-width: 300rpx;
  background-color: white;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.05);
  text-align: center;
}

.submit-btn {
  margin-top: 60rpx;
  background-color: #07c160;
  color: white;
  border-radius: 50rpx;
  font-size: 36rpx;
  font-weight: bold;
  padding: 24rpx 0;
  width: 70%;
  box-shadow: 0 6rpx 10rpx rgba(7, 193, 96, 0.2);
  letter-spacing: 4rpx;
}